{{#if message}} 
        <div class="title">
        <h4 style="background-color:rgb(0, 0, 0);">{{message}}</h4>
        </div>
{{else}}
    <div class="title">
        <h4 style="background-color:rgb(0, 0, 0);">Enter your Email, your new password !</h4>
    </div>
{{/if}}
<br>
<div class="container">  

    <div class="box">
        <div class="row d-flex justify-content-center">
            {{!-- Form --}}
            <form class="form" method="post", action="/api/email/reset-password">
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    </div> 
                </div>
                <div class="form-group row">
                    <label for="password" class="col-sm-2 col-form-label">New Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                </div>
                <br>
                {{#if token}}
                    <div class="form-group row">
                        <label for="token" class="col-sm-2 col-form-label">Your security token</label>
                        <div class="col-sm-10">
                            <input  class="form-control" value="{{token}}" id="token" name="token" readonly> 
                        </div>
                    </div>
                {{else}}
                    <div class="form-group row">
                        <label for="token" class="col-sm-2 col-form-label">Your security token</label>
                        <div class="col-sm-10">
                            <input  class="form-control" id="token" name="token" readonly> 
                        </div>
                    </div>
                {{/if}}
                <br>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Reset your Password</button>
                        </div>
                    </div>
            </form>
        </div>
    </div>

</div>
 <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="../public/js/forgot-pass.js"></script>
