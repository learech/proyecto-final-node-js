<section class="form-section">
  <h3 class="title">Login</h3>

  <div class="form-container">
    <form class="form-form" action='/api/sessions/login' method='POST'>
      <input class="form-input" type='text' name='email' placeholder='email' />
      <input class="form-input" name='password' placeholder='password' type='password' autocomplete='off' />
      <input class="form-submit" type='submit' value='Login!' />
    </form>
  </div>

  <a class="redirect" href='/api/sessions/register'>Don't you have an account yet?</a>
  <a class="redirect" href='/api/sessions/github'>Login with GitHub</a>
</section>