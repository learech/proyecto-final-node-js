<div class="container">
  <form id="product-form-realtime">
    <div>
      <label for="title">Title:</label>
      <input type="text" name="title" id="title">
      <label for="description">Description:</label>
      <input type="text" name="description" id="description">
    </div>

    <div>
      <label for="price">Price:</label>
      <input type="number" name="price" id="price">
      <label for="status">Status:</label>
      <input type="hiden" name="status" id="status" value=true>
    </div>

    <div>
      <label for="category">Category:</label>
      <input type="text" name="category" id="category">
      <label for="thumbnail">Thumbnail:</label>
      <input type="text" name="thumbnail" id="thumbnail">
    </div>

    <div>
      <label for="code">Code:</label>
      <input type="text" name="code" id="code">
      <label for="stock">Stock:</label>
      <input type="number" name="stock" id="stock">
    </div>

    <button class="submit_btn" type="submit">Enviar</button>
  </form>
</div>


<ul class="products_list" id="products_list">
  {{#each products}}
  <li class="card" id="{{this.id}}">
    <div>
      <h2>{{this.title}}</h2>
      <h4>{{description}}</h4>
      <p>Price: <span>${{price}}</span> </p>
      <p>Code: <span>{{code}}</span> </p>
      <p>Stock: <span>{{stock}}</span></p>
      <p>Category: <span>{{category}}</span></p>
      <button class="delete_btn" onclick="deleteProductSocket({{this.id}})">Delete</button>
    </div>
  </li>
  {{/each}}
</ul>






